# -*- mode: conf -*-

# Keyboard stuff ------------------------------------------------------

# Standard versions
rctrl - i : skhd -k "up"
rctrl - k : skhd -k "down"
rctrl - j : skhd -k "left"
rctrl - l : skhd -k "right"
rctrl - p : skhd -k "delete"
rctrl - o : skhd -k "pageup"
rctrl - u : skhd -k "pagedown"
rctrl - m : skhd -k "return"
rctrl - h : skhd -k "home"
rctrl - f : skhd -k "tab"
rctrl - e : skhd -k "escape"
rctrl - n : skhd -k "0x18" # Equals sign
rctrl - space : skhd -k "backspace"
rctrl - 0x29 : skhd -k "end"

# Shifted versions
rctrl + shift - i : skhd -k "shift - up"
rctrl + shift - k : skhd -k "shift - down"
rctrl + shift - j : skhd -k "shift - left"
rctrl + shift - l : skhd -k "shift - right"
rctrl + shift - p : skhd -k "shift - delete"
rctrl + shift - o : skhd -k "shift - pageup"
rctrl + shift - u : skhd -k "shift - pagedown"
rctrl + shift - m : skhd -k "shift - return"
rctrl + shift - h : skhd -k "shift - home"
rctrl + shift - f : skhd -k "shift - tab"
rctrl + shift - n : skhd -k "shift - 0x18" # + sign
rctrl + shift - space : skhd -k "shift - backspace"
rctrl + shift - 0x29 : skhd -k "shift - end"


# Cmd versions
#
# Note: You're used to Control-left/right moving backward/forward a
# word on Linux distributions. Emacs still behaves this way, but the
# rest of macOS does not (e.g. web browsers). Changing the default
# behavior here so that the keys should (generally) work as you expect
rctrl + cmd - i [
      *       : skhd -k "alt - up"
      "Emacs" : skhd -k "cmd - up"
]
rctrl + cmd - k [
      *       : skhd -k "alt - down"
      "Emacs" : skhd -k "cmd - down"
]
rctrl + cmd - l [
      *       : skhd -k "alt - right"
      "Emacs" : skhd -k "cmd - right"
]
rctrl + cmd - j [
      *       : skhd -k "alt - left"
      "Emacs" : skhd -k "cmd - left"
]
rctrl + cmd - p : skhd -k "alt - delete"
rctrl + cmd - o : skhd -k "cmd - pageup"
rctrl + cmd - u : skhd -k "cmd - pagedown"
rctrl + cmd - m : skhd -k "cmd - return"
rctrl + cmd - h : skhd -k "cmd - home"
rctrl + cmd - f : skhd -k "cmd - tab"
rctrl + cmd - space : skhd -k "alt - backspace"
rctrl + cmd - 0x29 : skhd -k "cmd - end"

# Cmd + Shifted versions
rctrl + cmd + shift - i [
      *       : skhd -k "shift + alt - up"
      "Emacs" : skhd -k "shift + cmd - up"
]
rctrl + cmd + shift - k [
      *       : skhd -k "shift + alt - down"
      "Emacs" : skhd -k "shift + cmd - down"
]
rctrl + cmd + shift - l [
      *       : skhd -k "shift + alt - right"
      "Emacs" : skhd -k "shift + cmd - right"
]
rctrl + cmd + shift - j [
      *       : skhd -k "shift + alt - left"
      "Emacs" : skhd -k "shift + cmd - left"
]
rctrl + cmd + shift - p : skhd -k "shift + alt - delete"
rctrl + cmd + shift - o : skhd -k "shift + cmd - pageup"
rctrl + cmd + shift - u : skhd -k "shift + cmd - pagedown"
rctrl + cmd + shift - m : skhd -k "shift + cmd - return"
rctrl + cmd + shift - h : skhd -k "shift + cmd - home"
rctrl + cmd + shift - f : skhd -k "shift + cmd - tab"
rctrl + cmd + shift - space : skhd -k "shift + cmd - backspace"
rctrl + cmd + shift - 0x29 : skhd -k "shift + cmd - end"


# Alt versions
rctrl + alt - i : skhd -k "alt - up"
rctrl + alt - k : skhd -k "alt - down"
rctrl + alt - j : skhd -k "alt - left"
rctrl + alt - l : skhd -k "alt - right"
rctrl + alt - p : skhd -k "alt - delete"
rctrl + alt - o : skhd -k "alt - pageup"
rctrl + alt - u : skhd -k "alt - pagedown"
rctrl + alt - m : skhd -k "alt - return"
rctrl + alt - h : skhd -k "alt - home"
rctrl + alt - f : skhd -k "alt - tab"
rctrl + alt - space : skhd -k "alt - backspace"
rctrl + alt - 0x29 : skhd -k "alt - end"

# Alt + Shifted versions
rctrl + alt + shift - i : skhd -k "shift + alt - up"
rctrl + alt + shift - k : skhd -k "shift + alt - down"
rctrl + alt + shift - j : skhd -k "shift + alt - left"
rctrl + alt + shift - l : skhd -k "shift + alt - right"
rctrl + alt + shift - p : skhd -k "shift + alt - delete"
rctrl + alt + shift - o : skhd -k "shift + alt - pageup"
rctrl + alt + shift - u : skhd -k "shift + alt - pagedown"
rctrl + alt + shift - m : skhd -k "shift + alt - return"
rctrl + alt + shift - h : skhd -k "shift + alt - home"
rctrl + alt + shift - f : skhd -k "shift + alt - tab"
rctrl + alt + shift - space : skhd -k "shift + alt - backspace"
rctrl + alt + shift - 0x29 : skhd -k "shift + alt - end"


# Cmd + Alt + Shift (+control) versions (this is called 'hyper')
hyper - i : skhd -k "shift + cmd + alt - up"
hyper - k : skhd -k "shift + cmd + alt - down"
hyper - j : skhd -k "shift + cmd + alt - left"
hyper - l : skhd -k "shift + cmd + alt - right"
hyper - p : skhd -k "shift + cmd + alt - delete"
hyper - o : skhd -k "shift + cmd + alt - pageup"
hyper - u : skhd -k "shift + cmd + alt - pagedown"
hyper - m : skhd -k "shift + cmd + alt - return"
hyper - h : skhd -k "shift + cmd + alt - home"
hyper - f : skhd -k "shift + cmd + alt - tab"
hyper - space : skhd -k "shift + cmd + alt - backspace"
hyper - 0x29 : skhd -k "shift + cmd + alt - end"


# Cmd + Alt versions
rctrl + alt + cmd - i : skhd -k "cmd + alt - up"
rctrl + alt + cmd - k : skhd -k "cmd + alt - down"
rctrl + alt + cmd - j : skhd -k "cmd + alt - left"
rctrl + alt + cmd - l : skhd -k "cmd + alt - right"
rctrl + alt + cmd - p : skhd -k "cmd + alt - delete"
rctrl + alt + cmd - o : skhd -k "cmd + alt - pageup"
rctrl + alt + cmd - u : skhd -k "cmd + alt - pagedown"
rctrl + alt + cmd - m : skhd -k "cmd + alt - return"
rctrl + alt + cmd - h : skhd -k "cmd + alt - home"
rctrl + alt + cmd - f : skhd -k "cmd + alt - tab"
rctrl + alt + cmd - space : skhd -k "cmd + alt - backspace"
rctrl + alt + cmd - 0x29 : skhd -k "cmd + alt - end"

# yabai stuff ------------------------------------------------

# Focus different windows
lctrl - j : yabai -m window --focus west
lctrl - k : yabai -m window --focus south
lctrl - i : yabai -m window --focus north
lctrl - l : yabai -m window --focus east

# Move current window somewhere on the current space
lctrl + shift - j : yabai -m window --warp west
lctrl + shift - k : yabai -m window --warp south
lctrl + shift - i : yabai -m window --warp north
lctrl + shift - l : yabai -m window --warp east


# Go to a particular space
# Note: You have to do this via the OS. See: https://apple.stackexchange.com/a/362615
# You may also want to 'reduce motion'

# Resizing

# Note: 0x18 is =/+, 0x1B is -/_
lctrl - 0x1B : yabai -m window --resize left:50:0 ; yabai -m window --resize right:-50:0
lctrl - 0x18 : yabai -m window --resize right:50:0 ; yabai -m window --resize left:-50:0
lctrl + shift - 0x18 : yabai -m window --resize top:0:-20 ; yabai -m window --resize bottom:0:-20
lctrl + shift - 0x1B : yabai -m window --resize bottom:0:20 ; yabai -m window --resize top:0:20

# Toggle split type for active window 0x2A is \
lctrl - 0x2A : yabai -m window --toggle split

# Open programs

# Terminal
lctrl - t : /Applications/Kitty.app/Contents/MacOS/kitty --single-instance -d ~

# Editor
lctrl - e : emacsclient -n -c

# Browser
# lctrl - b : /Applications/Firefox.app/Contents/MacOS/firefox

lctrl + shift - r : yabai -m space --balance

# Close focussed window (mimicing 'standard' OS shortcut)
lctrl - p : skhd --key "cmd - w"
lctrl - f : yabai -m window --toggle zoom-fullscreen

# Allow a window to float
lctrl - g : yabai -m window --toggle float;\
          yabai -m window --grid 4:4:1:1:2:2
